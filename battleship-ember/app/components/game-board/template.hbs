<table class="board-game">
  <thead>
    <tr>
      <th>&nbsp;</th>
      <th>1</th>
      <th>2</th>
      <th>3</th>
      <th>4</th>
      <th>5</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>A</td>
      {{board-cell positionX=1 positionY=1 currentGame=theGame}}
      {{board-cell positionX=2 positionY=1 currentGame=theGame}}
      {{board-cell positionX=3 positionY=1 currentGame=theGame}}
      {{board-cell positionX=4 positionY=1 currentGame=theGame}}
      {{board-cell positionX=5 positionY=1 currentGame=theGame}}
    </tr>
    <tr>
      <td>B</td>
      {{board-cell positionX=1 positionY=2 currentGame=theGame}}
      {{board-cell positionX=2 positionY=2 currentGame=theGame}}
      {{board-cell positionX=3 positionY=2 currentGame=theGame}}
      {{board-cell positionX=4 positionY=2 currentGame=theGame}}
      {{board-cell positionX=5 positionY=2 currentGame=theGame}}
    </tr>
    <tr>
      <td>C</td>
      {{board-cell positionX=1 positionY=3 currentGame=theGame}}
      {{board-cell positionX=2 positionY=3 currentGame=theGame}}
      {{board-cell positionX=3 positionY=3 currentGame=theGame}}
      {{board-cell positionX=4 positionY=3 currentGame=theGame}}
      {{board-cell positionX=5 positionY=3 currentGame=theGame}}
    </tr>
    <tr>
      <td>D</td>
      {{board-cell positionX=1 positionY=4 currentGame=theGame}}
      {{board-cell positionX=2 positionY=4 currentGame=theGame}}
      {{board-cell positionX=3 positionY=4 currentGame=theGame}}
      {{board-cell positionX=4 positionY=4 currentGame=theGame}}
      {{board-cell positionX=5 positionY=4 currentGame=theGame}}
    </tr>
    <tr>
      <td>E</td>
      {{board-cell positionX=1 positionY=5 currentGame=theGame}}
      {{board-cell positionX=2 positionY=5 currentGame=theGame}}
      {{board-cell positionX=3 positionY=5 currentGame=theGame}}
      {{board-cell positionX=4 positionY=5 currentGame=theGame}}
      {{board-cell positionX=5 positionY=5 currentGame=theGame}}
    </tr>
  </tbody>
</table>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        {{!-- <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button> --}}
        <h4 class="modal-title" id="myModalLabel">Setup Complete</h4>
      </div>
      <div class="modal-body">
        <p>You have selected 10 spaces. Click on the button below to start your game!</p>
      </div>
      <div class="modal-footer">
        <a href='javascript:history.go(0)' class="btn btn-default">Start Over</a>
        <button {{action 'startGame'}} class="btn btn-primary" data-dismiss="modal">Play Battleship!</button>
      </div>
    </div>
  </div>
</div>