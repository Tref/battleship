<div data-position-x={{positionX}} data-position-y={{positionY}}>
  
  {{#if isHumanBoard}}
    {{!-- If this is a cell on the human board --}}
    {{#if hit}}
      <div>
        <span class="glyphicon glyphicon-fire"></span>
      </div>
    {{else if miss}}
      <div>
        <span class="glyphicon glyphicon-remove"></span>
      </div>
    {{else}}
      <div>
        <span class="glyphicon glyphicon-question-sign"></span>
      </div>
    {{/if}}
  {{else}}
    {{!-- if this is a cell on the computer board --}}
    {{#if hit}}
      <div>
        <span class="glyphicon glyphicon-fire"></span>
      </div>
    {{else if miss}}
      <div>
        <span class="glyphicon glyphicon-remove"></span>
      </div>
    {{else}}
      <div {{action "select"}}>
        <span class="glyphicon glyphicon-question-sign"></span>
      </div>
    {{/if}}

  {{/if}}

</div>